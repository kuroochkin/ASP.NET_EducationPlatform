
@model IEnumerable<EducationPlatfotm.Domain.Users.Teacher>

<div class="container">
    <h3>Сотрудники</h3>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet">

    @if (Model.Any())
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th></th>
                    <th>Id</th>
                    <th>@Html.DisplayNameFor(model => model.LastName)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                    <th>@Html.DisplayNameFor(model => model.Patronymic)</th>
                    <th>@Html.DisplayNameFor(model => model.Subject.Name)</th>
                </tr>
            </thead>

            <tbode>
                @foreach (var teacher in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Teacher" asp-action="Details" asp-route-Id="@teacher.Id">
                                Информация
                                <i class="fa fa-id-card" aria-hidden="true"></i>
                            </a>
                        </td>
                        <td><a asp-controller="Teacher" asp-action="Edit" asp-route-Id="@teacher.Id">Редактировать</a></td>
                        <td>@teacher.Id</td>
                        <td>@teacher.LastName</td>
                        <td>@teacher.FirstName</td>
                        <td>@teacher.Patronymic</td>
                        <td>@teacher.Subject.Name</td>
                        <td>
                            <a asp-controller="Teacher" asp-action="Delete" asp-route-Id="@teacher.Id">Удалить</a>
                        </td>
                    </tr>
                }
            </tbode>
        </table>
    }
    else
    {
        <p>Сотрудников нет!</p>
    }

    <a asp-controller="Home" asp-action="Index">На главную</a>
</div>

