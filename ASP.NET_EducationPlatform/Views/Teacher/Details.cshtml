@model EducationPlatfotm.Domain.Users.Teacher

@{
    ViewData["Title"] = "Details";
}

<link href="css/stylesheet.css" rel="stylesheet" type="text/css" />
<link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container">

    <h4>Информация о сотруднике - Id: @Model.Id </h4>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patronymic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patronymic)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Subjects)
        </dt>
        <dd class = "col-sm-10">
            @for(int i = 0; i < Model.Subjects.Count; i++)
            {
                @if(Model.Subjects[i].IsInvolved == true)
                {   
                    <th>@Html.DisplayFor(model => model.Subjects[i].Name)</th>
                }
            }
            
        </dd>
    </dl>
</div>
<div>
        
            <a asp-action="Index">На главную</a>
        
</div>
</div>
