@using ASP.NET_EducationPlatform.Data


@model ASP.NET_EducationPlatform.ViewModels.EditLessonViewModel

<link href="css/stylesheet.css" rel="stylesheet" type="text/css" />
<link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet">

@{
    ViewData["Title"] = "Edit";
}

<div class="container">

    <h4>Создание урока - Id: @Model.LessonId </h4>


    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create"  method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Direction" class="control-label"></label>
                    <input asp-for="Direction" class="form-control" />
                    <span asp-validation-for="Direction" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <td>@Html.DisplayNameFor(model => model.SubjectName)</td>
                    <td>@Html.DropDownListFor(model => model.SelectedSubject, Model.SubjectSelectList)</td>
                </div>


                <div class="form-group">
                    <td>@Html.DisplayNameFor(model => model.TeacherFullName)</td>
                    <td>@Html.DropDownListFor(model => model.SelectedTeacher, Model.TeacherSelectList)</td>
                </div>

                <div class="form-group">
                    <td>@Html.DisplayNameFor(model => model.StudentFullName)</td>
                    <td>@Html.DropDownListFor(model => model.SelectedStudent, Model.StudentSelectList)</td>
                </div>

                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>

                @Html.HiddenFor(x => x.LessonId)
                @Html.HiddenFor(x => x.SubjectName)
                @Html.HiddenFor(x => x.TeacherFullName)
                @Html.HiddenFor(x => x.StudentFullName)

            </form>

        </div>

    </div>

    <div>
        <a asp-action="Index">На главную</a>
    </div>
</div>



